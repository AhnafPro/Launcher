{
  "name": "launcher",
  "version": "0.1.2",
  "description": "A custom minecraft launcher",
  "private": false,
  "author": "Matt Worzala <bhop.me>",
  "license": "MIT",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "package": "electron-builder --dir",
    "dist": "react-scripts build && build --x64 --win --c.extraMetadata.main=build/electron.js -p always"
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.5",
    "electron-updater": "^4.0.6",
    "electron-vibrancy": "^0.1.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "electron": "^5.0.0",
    "electron-builder": "^20.39.0",
    "electron-devtools-installer": "^2.2.4",
    "concurrently": "^4.1.0",
    "typescript": "^3.4.5",
    "react-scripts": "3.0.0"
  },
  "build": {
    "appId": "me.bhop.launcher",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "./public/electron.js"
    ],
    "extends": null,
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
