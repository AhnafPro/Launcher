{
  "name": "launcher",
  "version": "0.1.10",
  "description": "A custom minecraft launcher",
  "private": false,
  "author": "Matt Worzala <bhop.me>",
  "license": "MIT",
  "main": "public/gateway.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "package": "electron-builder --dir",
    "dist": "react-scripts build && build --x64 --win --c.extraMetadata.main=build/gateway.js -p always",
    "test": "mocha \"test/**/*.js\""
  },
  "dependencies": {
    "discord-rpc": "^3.0.1",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.5",
    "electron-updater": "^4.0.6",
    "electron-vibrancy": "^0.1.3",
    "extract-zip": "^1.6.7",
    "follow-redirects": "^1.7.0",
    "fs-extra": "^7.0.1",
    "lzma-purejs": "^0.9.3",
    "mocha": "^6.1.4",
    "node-fetch": "^2.6.0",
    "react": "^16.8.6",
    "react-contextmenu": "^2.11.0",
    "react-dom": "^16.8.6",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "electron": "^5.0.0",
    "electron-builder": "^20.39.0",
    "electron-devtools-installer": "^2.2.4",
    "concurrently": "^4.1.0",
    "typescript": "^3.4.5",
    "react-scripts": "3.0.0"
  },
  "build": {
    "appId": "me.bhop.launcher",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "./public/gateway.js",
      "./public/icon.png",
      "src/**"
    ],
    "extends": null,
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "./build/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
